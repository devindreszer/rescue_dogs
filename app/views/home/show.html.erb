<div id="banner">
  <div id="browse">
    <h1 class="text-center banner-text">Browse rescue dogs in your area</h1>

    <%= form_tag(random_dog_path, method: :get) do %>
      <div class="row">
        <div class="medium-4 small-centered columns">
          <div class="row collapse">

            <div class="small-10 columns">
              <%= text_field_tag :zip, params[:zip], placeholder: "Enter Zip Code" %>
            </div>

            <div class="small-2 columns">
              <%= button_tag(type: "submit", name: "search", class: "search-button button postfix radius") do %>
                <i class="fi-magnifying-glass"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if flash[:notice].present? %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>

    <% if flash[:alert].present? %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>

  </div>
</div>


