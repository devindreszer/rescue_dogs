<% @meta_title = "Dog Fortunes" %>
<% @meta_description = "Get your fortune told by an adoptable dog" %>
<% @meta_image = image_url("gracie_banner.jpg") %>
<% @meta_url = "#{request.protocol}#{request.host}" %>

<h2>
  <% if params[:favorite] %>
    <%= @dog_matches.count %> Favorites
  <% elsif params[:top_dog] %>
    <%= @dog_matches.count %> Top Dog
  <% else %>
    <%= @dog_matches.count %> Matches
  <% end %>
</h2>

<hr>
<ul class="large-block-grid-3 medium-block-grid-2 small-block-grid-1">
  <%= render partial: "dog", collection: @dog_matches.map(&:dog) %>
</ul>
